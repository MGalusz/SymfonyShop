{% extends '@App/base.html.twig' %}

{% block body %}
    <h1>Purchase</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ purchase.id }}</td>
        </tr>
        <tr>
            <th>Products</th>

            {% for product in purchase.products %}


                {% for product in purchase.product %}
                    <td>{{ purchase.product.name }}</td>
                    <td>{{ purchase.product.description }}</td>
                    <td>{{ purchase.product.price }}</td>
                    <td>{{ purchase.product.photo }}</td>
                {% endfor %}
            {% endfor %}

        <tr>
            <th>Status</th>
            <td>{{ purchase.status }}</td>
        </tr>
        <tr>
            <th>Sum</th>
            <td>{{ purchase.sum }}</td>
        </tr>
        <tr>
            <th>User</th>
            {
            <td>{{ purchase.user.address }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('purchase_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('purchase_edit', { 'id': purchase.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
