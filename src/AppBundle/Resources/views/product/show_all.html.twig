{% extends '@App/base.html.twig' %}

{% block body %}
    <h1>Dostepne produkty</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>

        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.photo }}</td>
                <td>{{ product.quantity }}</td>
                <td>
                    <ul>
                        <li>
                            { form_start(form) }}
                            {{ form_widget(form) }}
                            {{ form_end(form) }}
                        </li>
                        <li>
                            <a href="{{ path('product_edit', { 'id': product.id }) }}">dodaj do Kosztyka</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('product_new') }}">Create a new product</a>
        </li>
    </ul>
{% endblock %}
